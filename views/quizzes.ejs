<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quizzes</title>
    <link rel="shortcut icon" href="/images/logo1.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/enhancement.css">
    <link rel="stylesheet" href="/css/quizzes.css">
</head>
<body class="fade-in">
    <header>
        <div class="container">
            <div class="logo">
                <img src="/images/logo1.png" alt="Logo" class="logo-image">
                <h1 class="website-name">Techguide</h1>
            </div>
            <nav class="nav-links header-links">
                <ul>
                    <li><a href="/" class="nav-link">Home</a></li>
                    <li><a href="/learning" class="nav-link">Learning</a></li>
                    <li><a href="/coding-algorithms" class="nav-link">Coding Algorithms</a></li>
                    <li><a href="/login" class="nav-link">Login</a></li>
                    <li><a href="/signup" class="nav-link">Sign Up</a></li>
                </ul>
            </nav>
            <div class="user-menu">
                <div class="user-icon" id="user-icon">
                    <img src="/images/<%= profileIcon %>" alt="User Profile" class="user-profile-icon">
                    <span class="username"><%= username %></span>
                </div>
                <div class="dropdown-menu" id="dropdown-menu">
                    <a href="/profile">Profile</a>
                    <a href="/downloads">My Downloads</a>
                    <a href="/attempts">Track Scores</a>
                    <a href="/logout">Logout</a>
                </div>
            </div>
        </div>
    </header>

    <main class="quizzes-container">
        <h1>Select a Language to Start the Quiz</h1>
        <div class="languages-grid">
            <% const languages = [
                { name: 'Python', image: 'python.png' },
                { name: 'C', image: 'c.png' },
                { name: 'C++', image: 'c++.png' },
                { name: 'Java', image: 'java.png' },
                { name: 'JavaScript', image: 'js.jpeg' },
                { name: 'HTML', image: 'html.png' },
                { name: 'CSS', image: 'css.jpeg' },
                { name: 'PHP', image: 'php.png' },
                { name: 'ReactJS', image: 'reactjs.png' },
                { name: 'NodeJS', image: 'nodejs.png' }
            ]; %>

            <% languages.forEach(language => { %>
                <div class="language-card">
                    <img src="/images/<%= language.image %>" alt="<%= language.name %>">
                    <h2><%= language.name %></h2>
                    <a href="/quiz/<%= language.name.toLowerCase() %>" class="start-quiz-btn">Start Quiz</a>
                </div>
            <% }); %>
        </div>
    </main>

    <footer>
        <div class="container">
            <p>&copy; 2024 Techguide. All rights reserved.</p>
            <div class="footer-links">
                <a href="#">Privacy Policy</a>
                <a href="#">Terms of Service</a>
                <a href="/contact">Contact Us</a>
            </div>
        </div>
    </footer>
    <button id="back-to-top">â†‘</button>
    <script src="/js/home.js"></script>
</body>
</html>
